if Gem::Version.new(RUBY_VERSION.dup) < Gem::Version.new('2.4.0')
  appraise 'activerecord-4.1.16' do
    gem 'activerecord', '4.1.16'
    group :development do
      gem 'rails', '4.1.16'
    end
  end
end

